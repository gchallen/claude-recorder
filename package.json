{
  "name": "claude-recorder",
  "version": "2025.1.0",
  "description": "Record and search Claude Code CLI activity",
  "type": "module",
  "scripts": {
    "cli": "bun run src/index.ts",
    "start": "bun run src/index.ts start",
    "stop": "bun run src/index.ts stop",
    "status": "bun run src/index.ts status",
    "test": "bun test",
    "build": "bun run scripts/build.ts",
    "build:local": "bun build --compile --outfile=dist/recorder ./src/index.ts",
    "watcher": "bun run src/watcher.ts",
    "hook:start": "bun run src/hooks/session-start.ts",
    "hook:end": "bun run src/hooks/session-end.ts",
    "hook:pre-commit": "bun run src/hooks/pre-commit.ts",
    "skill:save-session": "bun run src/skills/save-session.ts",
    "import": "bun run src/import-session.ts"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14"
  }
}
